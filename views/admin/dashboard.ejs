                <i class="fas fa-image"></i> Manage Gallery
            </button>
            <button class="tab-button" data-tab="blog">
                <i class="fas fa-blog"></i> Manage Blog
            </button>
        </div>

        <!-- Gallery Management Tab -->
        <div class="tab-content active" id="gallery-tab">
            <form class="admin-form" action="/admin/add-gallery" method="POST" enctype="multipart/form-data">
                <div class="form-container">
                    <div class="form-row">
                        <label class="form-label">
                            <i class="fas fa-heading"></i> Gallery Title
                        </label>
                        <input type="text" name="title" class="form-input" required>
                    </div>

                    <div class="form-row">
                        <label class="form-label">
                            <i class="fas fa-align-left"></i> Description
                        </label>
                        <textarea name="description" class="form-textarea" required></textarea>
                    </div>

                    <div class="form-row">
                        <label class="form-label">
                            <i class="fas fa-images"></i> Upload Images (max 50)
                        </label>
                        <div class="file-upload">
                            <input type="file" name="galleryImages" multiple accept="image/*" id="galleryFileInput" class="file-input">
                            <label for="galleryFileInput" class="file-label">
                                <i class="fas fa-cloud-upload-alt"></i> Choose Files
                            </label>
                            <span class="file-selected">No files selected</span>
                        </div>
                    </div>

                    <button type="submit" class="admin-submit">
                        <i class="fas fa-plus-circle"></i> Add Gallery
                    </button>
                </div>
            </form>

            <div class="existing-content">
