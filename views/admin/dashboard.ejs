                <% galleries.forEach(gallery => { %>
                    <div class="admin-card">
                        <div class="admin-card-header">
                            <h3 class="admin-card-title"><%= gallery.title %></h3>
                            <div class="admin-card-actions">
                                <span class="gallery-date">
                                    <i class="fas fa-calendar"></i> <%= gallery.created_at %>
                                </span>
                                <a href="/admin/edit-gallery/<%= gallery.id %>" class="edit-btn">
                                    <i class="fas fa-edit"></i> Edit Gallery
                                </a>
                            </div>
                        </div>
                        
                        
                        <p><%= gallery.description %></p>
                        
                        <div class="admin-grid">
                            <% gallery.images.forEach(image => { %>
                                <div class="admin-grid-item">
                                    <img src="/uploads/<%= image %>" alt="Gallery image">
                                </div>
                            <% }); %>
                        </div>

                        <form action="/admin/delete-gallery/<%= gallery.id %>" method="POST" class="delete-form">
                            <button type="submit" class="delete-btn">
                                <i class="fas fa-trash-alt"></i> Delete Gallery
                            </button>
                        </form>
                    </div>
                <% }); %>
            </div>
        </div>

