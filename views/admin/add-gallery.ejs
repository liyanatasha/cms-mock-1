<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Gallery Entry</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Add New Activity Gallery</h1>
        <form action="/admin/add-gallery" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Gallery Title:</label>
                <input type="text" name="title" required>
            </div>
            
            <div class="form-group">
                <label>Description:</label>
                <textarea name="description" rows="3" required></textarea>
            </div>
            
            <div class="form-group">
                <label>Upload Images (max 10):</label>
                <input type="file" name="galleryImages" multiple accept="image/*">
            </div>
            
            <button type="submit">Publish Gallery</button>
        </form>

        <h2>Existing Galleries</h2>
        <div>
            <% galleries.forEach(gallery => { %>
                <div class="gallery-entry">
                    <h3><%= gallery.title %></h3>
                    <p><%= gallery.description %></p>
                    <div class="gallery-grid">
                        <% gallery.images.forEach(image => { %>
                            <div class="gallery-item">
                                <img src="/uploads/<%= image %>" alt="Activity photo">
                            </div>
                        <% }); %>
                    </div>
                    <p class="meta">Posted on <%= gallery.created_at %></p>

                    <!-- Admin Delete Button -->
                    <form action="/admin/delete-gallery/<%= gallery.id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete Gallery</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
